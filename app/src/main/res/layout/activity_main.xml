<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image"/>

    <Button
        android:layout_below="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rotate 90"
        android:id="@+id/button"/>
    <Button
        android:layout_below="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rotate 180"
        android:id="@+id/button_180"/>
    <Button
        android:layout_below="@+id/button_180"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rotate 270"
        android:id="@+id/button_270"/>

    <Button
        android:layout_below="@+id/button_270"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mirror"
        android:id="@+id/button_mirror"/>

</RelativeLayout>